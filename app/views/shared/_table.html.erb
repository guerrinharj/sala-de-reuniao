<table class="col-12">
    <thead>
      <tr>
        <div class="d-flex justify-content-between align-items-center">
          <span class="<%= params[:action] == "lastweek" ? "font-weight-bold" : '' %>"> <%= link_to 'Semana Passada', lastweek_path %></span>
          <span class="<%= params[:action] == "index" ? "font-weight-bold" : '' %>"> <%= link_to 'Essa Semana', root_path %></span>
          <span class="<%= params[:action] == "nextweek" ? "font-weight-bold" : '' %>"> <%= link_to 'Proxima Semana', nextweek_path %></span>
        </div>
        </tr>
      <tr>
        <th class="px-4 border border-dark"> Hor√°rio </th>
        <% days.each do |day| %>
        <th class="px-4 border border-dark"> <%= day %> </th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% hours.each do |hour| %>
        <tr>
          <td class="p-4 border border-dark"> <%= hour %>:00  </td>
          <% days.each do |day| %>
          <td class="p-4 border border-dark">
            <% slots.each do |slot| %>
              <% if slot.day == day && slot.hour == "#{hour}:00"%>
                  <% if slot.reservations.empty? %>
                  <div class="slot-<%=slot.id%>">
                  <% if slot.week == 1 %>
                    -
                  <% else %>
                    <%= link_to "Disponivel", new_slot_reservation_path(slot), class: "disponivel", remote: true %>
                  <% end %>
                  </div>
                  <% else %>
                  <div class="slot-<%= slot.id %>-reservation-<%=slot.reservations.last.id%>">
                  <p><%=link_to slot_reservation_path(slot, slot.reservations.last), remote: true do %></p>
                    Reservado para <%= slot.reservations.last.user.name %>
                    <% end %>
                    <% if params[:action] == "lastweek"%>
                      <span></span>
                      <% else %>
                      <p> <%= link_to "Deletar?", slot_reservation_path(slot, slot.reservations.last), method: :delete,  data: { confirm: "Are you sure?" }, remote: true %></p>
                    <% end %>
                  <% end %>
                  </div>
              <% end %>
            <% end %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
