      <div>
        <h2> <%= slot.day %> as <%= slot.hour %> </h2>
      </div>
      <% end %>

      <%= simple_form_for([slot, reservation]) do |f| %>
        <%= f.input :description %>
        <%= f.submit %>
       <% end %>
</div>
