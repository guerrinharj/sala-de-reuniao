<div class="container text-center">

  <div class="col-3 mt-5 mx-auto ">
   <h2> <%= @user.name %> </h2>
  </div>

  <ul class="col-6 m-auto">
    <% @reservations.each do |reservation|%>
    <li class="border-top border-bottom list-group-item">
      <p class="font-weight-bold"><%= reservation.description %></p>
      <%= reservation.slot.day %> as <%= reservation.slot.hour %>
    </li>
    <% end%>
  </ul>
</div>
